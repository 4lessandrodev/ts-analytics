{
  "compilerOptions": {
      "module": "ES2020",
      "target": "ES2020",
      "lib": ["DOM", "ES2020"],
      "strict": true,
      "noImplicitAny": false,
      "declaration": true,
      "removeComments": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "jsx": "react",
      "allowSyntheticDefaultImports": true
  },
  "include": ["lib/*", "lib/**/*"],
  "exclude": ["/**/*.spec.ts", "/*.spec.ts", "tests", "*/tests"]
}
